<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_comp_player"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ford.war.CompPlayerActivity">

    <TextView
        android:id="@+id/compScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Computer Score: "/>

    <TextView
        android:id="@+id/compScoreNum"
        android:layout_toRightOf="@id/compScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="N/A"/>

    <TextView
        android:id="@+id/compCurrentCard"
        android:layout_below="@id/compScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Computer Current Card: "/>

    <TextView
        android:id="@+id/compCard"
        android:layout_below="@id/compScore"
        android:layout_toRightOf="@id/compCurrentCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="N/A"/>

    <TextView
        android:id="@+id/playerScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Player Score: "/>

    <TextView
        android:id="@+id/playerScoreNum"
        android:layout_toRightOf="@id/playerScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="N/A"/>

    <TextView
        android:id="@+id/playerCurrentCard"
        android:layout_centerHorizontal="true"
        android:layout_margin="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player Current Card: "/>

    <TextView
        android:id="@+id/playerCard"
        android:layout_below="@id/playerCurrentCard"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="N/A"/>

    <Button
        android:id="@+id/drawButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Draw Card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>
